    keyword 'Editor_Keywords' {
        'case', 'do', 'done', 'elif', 'else',
        'esac', 'fi', 'for', 'function', 'if',
        'in', 'then', 'until', 'while', 'exec',
        'export', 'set', 'echo', 'exit', 'select',
        'source', 'unset', 'alias', 'unalias',
        'shift', 'break', 'read', 'return',
