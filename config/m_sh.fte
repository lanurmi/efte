mode SH: PLAIN { # *sh
    FileNameRx          = /{\.\cSH$}|{configure.{in}|{ac}}/;
    FirstLineRx         = /^\#\![ ]*[^ ]*sh>/;
    RoutineRegexp       = /^\s*{function\s\s*\S\S*\s*}|{\S\S*\s*\(\)}\s*$/;
    HilitOn             = 1;
    Colorizer           = 'SH';
    MultiLineHilit      = 1;
    AutoHilitParen      = 1;
    
    SaveFolds           = 2;      # save fold info at end of line
    CommentStart        = ' #';
    CommentEnd          = '';
}
