    h_trans { 4, '', '$', 'Function' }
    h_trans { 5, '', '$$', 'Function' }
    h_trans { 3, '', '%', 'Comment' }

    h_state 1 { 'Quotes' }
    h_trans { 0, '', '\\end{verbatim}', 'Quotes' }

    h_state 2 { 'Tag' }
    h_trans { 0, 'S', 'a-zA-Z0-9_', 'Symbol' }
    h_wtype { 0, 0, 0, '', 'a-zA-Z0-9_' }

